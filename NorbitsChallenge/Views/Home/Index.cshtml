@model HomeModel

@{

    ViewData["Title"] = "Home Page";
}

<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>
<br>
<br>
<h2>Cars in system belonging to company:</h2>
<h3>ID: @Model.CompanyId</h3>
@if (!String.IsNullOrEmpty(Model.CompanyName))
    {
        <h3>Company name: @Model.CompanyName</h3>
    }
<br>
<br>
@if (Model.CompanyCars.Count != 0)
{
    <table>
      <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Description</th>
        <th>LicensePlate</th>
        <th>TireCount</th>
      </tr>
      @foreach(Car car in Model.CompanyCars)
      {
      <tr>
        <td>@car.Brand</td>
        <td>@car.Model</td>
        <td>@car.Description</td>
        <td>@car.LicensePlate</td>
        <td>@car.TireCount</td>
      </tr>
  
      }
    </table>
}
</body>
    
<hr/>
<h4><a asp-action="Index" asp-controller="Settings" asp-route-companyId="@Model.CompanyId">Enter CompanyID</a></h4>
